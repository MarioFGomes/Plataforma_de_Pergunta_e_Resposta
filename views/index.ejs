<!DOCTYPE html>
<html lang="pt-br">
    <%- include('../views/partials/head')%>
<body>
    <%- include('../views/partials/header')%>

    <div class="container">
        <h1>Perguntas</h1>
       
        <hr>
        <% perguntas.forEach(pergunta=>{%>
            <br>
            
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%=pergunta.id%>"><button type="button" class="btn btn-primary">Responder</button></a>
                </div>
            </div>
       <% })%>
    </div>

</body>
</html>